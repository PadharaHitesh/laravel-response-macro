{
    "name": "your-vendor/laravel-response-macro",
    "description": "Adds a Response::api() macro for uniform JSON APIs",
    "type": "library",
    "license": "MIT",
    "require": {
      "php": ">=8.1",
      "illuminate/support": "^10.0"
    },
    "autoload": {
      "psr-4": {
        "YourVendor\\ResponseMacro\\": "src/"
      }
    },
    "extra": {
      "laravel": {
        "providers": [
          "YourVendor\\ResponseMacro\\ResponseMacroServiceProvider"
        ]
      }
    },
    "require-dev": {
      "orchestra/testbench": "^8.0",
      "phpunit/phpunit": "^10.0"
    }
  }